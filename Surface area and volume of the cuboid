import java.util.Scanner;
import static java.lang.Math.sqrt;
public class Main
{
	public static void main(String[] args) {
	    int a, b, c;
	    double SA, V;
	    System.out.println("Enter all the sides of the cuboid - ");
	    
	    Scanner sc= new Scanner(System.in);
	  a = sc.nextInt();
	  b = sc.nextInt();
	  c = sc.nextInt();
	  
	   
	  SA = 3*((a*b)+(b*c)+(c*a));
	  V = a*b*c;
	  System.out.println("The surface area of the cuboid " +SA);
	  System.out.println("The volume of the cuboid "+V);
	}
 }
